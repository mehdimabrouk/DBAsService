{% extends 'base.html.twig' %}
{% block body %}
          <div class="row top-buffer  border-1x">
                        <table class="table table-striped"> 
                            <div class="sort-num-box">
                                <input type="text" placeholder="new table name">
                                <input type="text" placeholder="numbe of column">
                                <a class="btn btn-primary btn-sm">Create New Table </a>
                            </div>
                            <thead> 
                              <tr> 
                                <th>#</th> 
                                <th>Table Name</th> 
                                <th>Action</th> 
                              </tr> 
                            </thead> 
                            <tbody> 
                              {% for table in tables %}
                                  <tr> 
                                    <td> {{ loop.index }} </td> 
                                    <td>{{ table }}</td> 
                                    <td>
                                      <a href="#" class="btn btn-success btn-xs">Browse</a>
                                      <a href="#" class="btn btn-primary btn-xs">Structure</a>
                                      <a href="#" class="btn btn-primary btn-xs">Insert</a>
                                      <a href="/dbs/deleteTable/{{table}}" class="btn btn-danger btn-xs">Drop</a>
                                    </td> 
                                  </tr> 
                              {% endfor %}

                            </tbody> 
                        </table>
                    </div>

{% endblock %}